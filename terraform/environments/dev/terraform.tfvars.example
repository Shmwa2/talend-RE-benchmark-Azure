# Azure Configuration
resource_group_name = "rg-talend-benchmark-dev"
location            = "eastus"

# Environment
environment = "dev"

# VM Configuration
vm_size = "Standard_D4s_v3"

# SSH Configuration
admin_ssh_key_path = "~/.ssh/talend-azure-key.pub"

# Network Security
# IMPORTANT: Change this to your public IP address for production
# Get your IP: curl https://api.ipify.org
allowed_ssh_source_ips = ["*"]  # TODO: Restrict to specific IP

# Monitoring
# Leave empty to disable email alerts
alert_email = ""

# Tags
tags = {
  Project     = "Talend Benchmark"
  Environment = "dev"
  Owner       = "your-name"  # TODO: Change to your name
  ManagedBy   = "Terraform"
  Purpose     = "ETL Performance Testing"
}
